<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/paddingTop"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:background="@color/material_grey_700"
    >

    <EditText
        android:id="@+id/username"
        android:hint="@string/str_username"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />
    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:hint="@string/str_password"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/username" />

    <Button
        android:id="@+id/login"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/tvpT"
        android:layout_width="@dimen/buttonwidth200"
        android:layout_height="wrap_content"
        android:hint="@string/str_login"
        android:layout_centerInParent="true"
        android:layout_below="@+id/password" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/signuptext"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Don't have an account? Create an account."
        android:layout_below="@+id/login"
        android:textAlignment="center"
        android:paddingTop="@dimen/tvpT"
        android:paddingBottom="@dimen/tvpB"
        />

    <Button
        android:id="@+id/createaccount"
        android:background="@android:color/white"
        android:layout_width="@dimen/buttonwidth200"
        android:layout_height="wrap_content"
        android:hint="@string/str_createaccount"
        android:layout_below="@+id/signuptext"
        android:layout_centerInParent="true" />




</RelativeLayout>